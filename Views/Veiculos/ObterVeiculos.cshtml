@model IEnumerable<SistemaCadastro.Models.Veiculos>

<div class="container">
    <div class="row justify-content-end mb-3">
        <div class="col-auto">
            </br>
            <a href="@Url.Action("IncluirVeiculo")" class="btn btn-success">Adicionar novo Veículo(Homologando)</a>
        </div>

        <div class="col-auto">
            </br>
            <a href="@Url.Action("Create")" class="btn btn-success">Nova cor(BETA)</a>
        </div>

        <div class="col-auto">
            </br>
            <a href="@Url.Action("Create")" class="btn btn-success">Novo tipo de Combustível(BETA)</a>

        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Placa</th>
                    <th>Renavam</th>
                    <th>Chassi</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Combustivel</th>
                    <th>Cor</th>
                    <th>Ano</th>
                    <th>Status</th>
                    <th class="col-auto">Opções</th>
                </tr>
            </thead>
            @if (Model != null && Model.Any())
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Placa</td>
                            <td>@item.Renavam</td>
                            <td>@item.Chassi</td>
                            <td>@item.Marca</td>
                            <td>@item.Modelo</td>
                            <td>@item.Combustivel</td>
                            <td>@item.Cor</td>
                            <td>@item.Ano</td>
                            <td>@item.Status</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("AtualizarVeiculo", new { id = item.VeiculosId })" class="btn btn-primary">Editar</a>
                                    <a href="@Url.Action("Em breve", new { id = item.VeiculosId })" class="btn btn-info">Em breve</a>
                                    <button type="button" class="btn btn-danger" onclick="confirmDelete('@Url.Action("ExcluirVeiculo", new { id = item.VeiculosId })')">Excluir</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {

                    <tbody>
                        <tr>
                            <td colspan="11">Error: Nenhum veículo encontrado ou um dos campos está "nulo".</td>
                        </tr>
                        
                        <div>
                            <a href="@Url.Action("ObterVeiculos")" class="btn btn-danger">Voltar</a>
                        
                        </div>
                        
                    </tbody>
            }
        </table>
    </div>
</div>

<script>
    function confirmDelete(url) {
        if (confirm('Tem certeza que quer excluir o veículo?')) {
            window.location.href = url;
        }
    }
</script>
